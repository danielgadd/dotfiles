[user]
        useConfigOnly = true

[core]
	editor = vim
  	quotepath = false
  	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less -F -X
[commit]
        gpgsign = true

[push]
	default = simple

[pull]
        rebase = true

[merge]
	tool = vimdiff

[color]
	ui = true

[color "branch"]
  	current = yellow black
  	local = yellow
  	remote = magenta

[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red reverse
  	new = green reverse
  	whitespace = white reverse

[color "status"]
  	added = yellow
  	changed = green
  	untracked = cyan reverse
  	branch = magenta

[alias]
        # pretty log
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

        # git clone with submodules
        c = clone --recursive

        # Initalise personal repos
        init-personal = !git config user.signingkey "0x676D58AF72D6625D" && git config user.email "git@gadd.co.nz"
	identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; git config user.signingkey \"$(git config user.$1.signingkey)\"; :"

        # Use a uncommit command to rollback softly while developing
        uncommit = "reset \"HEAD^\""

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user "work"]
	name = Daniel Gadd
	email = daniel@redshield.co
	signingkey = 61A26B65BF6BC2DD

[user "personal"]
        name = Daniel Gadd
        email = git@gadd.co.nz
        signingkey = ADA7E5E3E673F15F

[init]
        templatedir = ~/.git_hooks
	defaultBranch = main
